@import "vars.styl"


* {
    font-family: sans-serif
    color: $colors.dark
    outline none
}

i {
    color inherit
}

.spacer
    flex-grow: 1

.layout
    display flex
    flex 1 1 auto
    flex-wrap nowrap
    min-width 0

    .column
        flex-direction column

    .wrap
        flex-wrap wrap

.divider
    display: block
    flex: 1 1 0
    max-width: 100%
    height: 0
    max-height: 0
    border: solid
    border-width: thin 0 0 0
    transition: inherit

    color: $colors.border

.btn
    padding 5px 20px
    border: 1px solid $colors.border
    background-color #fff
    cursor pointer

    &:hover
        background-color: $colors.hover

    &:disabled
        color: $colors.border
        cursor: not-allowed

    &.active
        background-color: $colors.hover




.btn[data-label="refresh"] {
    border-left: none;
    border-right: none;
}

.btn[data-label="back"] {
    border-right: none;
}

.btn[data-label="forward"] {
    border-top-right-radius 10px
    border-bottom-right-radius 10px
}

.btn[data-label="list"] {
    border-top-left-radius 10px
    border-bottom-left-radius 10px
    border-right none
}

.btn[data-label="grid"] {
    border-top-right-radius 10px
    border-bottom-right-radius 10px
}



.toolbar
    padding: 10px 20px;

    .title
        font-size: 25px;

    .location
        border: 1px solid $colors.border
        padding 5px 10px
        flex-grow: 1

        border-top-left-radius 10px
        border-bottom-left-radius 10px

        input
            width 100%
            height 100%
            border none
